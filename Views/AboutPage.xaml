<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Zorin_Roman_ISP_232_Lab20_MAUiFirstProject.Views.AboutPage"
    xmlns:models="clr-namespace:Zorin_Roman_ISP_232_Lab20_MAUiFirstProject.Models"
    x:DataType="models:About">

    <ContentPage.BindingContext>
        <models:About />
    </ContentPage.BindingContext>

    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="dotnet_bot.png"
                SemanticProperties.Description="Hello"
                HeightRequest="64"/>
            <Label FontSize="22" FontAttributes="Bold"
                Text="{Binding Title}" VerticalOptions="End"/>
            <Label FontSize="22"
                Text="{Binding Version}" VerticalOptions="End"/>
        </HorizontalStackLayout>
        
        <Label Text="{Binding Message}"/>
        <Button Text="Узнать больше..." Clicked="LearnMore_Clicked"/>
    </VerticalStackLayout>
</ContentPage>